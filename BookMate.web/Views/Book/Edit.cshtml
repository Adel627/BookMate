@model BookFormViewModel

<div class="col-md-10">
    <form asp-action="SaveEdit">
        <fieldset>
            <div>
                <label asp-for="Title" class="form-label fw-bolder mt-4"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>

            </div>
            <div>
                <label asp-for="AuthorId" class="form-label fw-bolder mt-4"></label>
                <select asp-for="AuthorId" class="form-select" asp-items="@Model.Authors">
                    <option value="0">---Select Author---</option>
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>

            </div>

            <div>
                <label asp-for="SelectedCategories" class="form-label fw-bolder mt-4"></label>
                <select multiple="" class="form-select" asp-for="SelectedCategories"
                        asp-items="Model.Categories">
                </select>
                <span asp-validation-for="SelectedCategories" class="text-danger"></span>

            </div>

            <div>
                <label asp-for="Publisher" class="form-label fw-bolder mt-4"></label>
                <input asp-for="Publisher" class="form-control">
                <span asp-validation-for="Publisher" class="text-danger"></span>

            </div>
            <br />
            <div class="col-md-2">
                <input type="date" asp-for="PublishingDate" class="form-control">
                <label asp-for="PublishingDate" class="form-label "></label>
                <span asp-validation-for="PublishingDate" class="text-danger"></span>

            </div>
            <br />
            <div class="col-md-2">
                <input asp-for="ImageUrl" class="form-control" type="file">
                <label asp-for="ImageUrl" class="form-label  "></label>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>

            </div>
            <div>
                <label asp-for="Hall" class="form-label fw-bolder mt-4"></label>
                <input asp-for="Hall" class="form-control">
                <span asp-validation-for="Hall" class="text-danger"></span>

            </div>
            <br />
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsAvailableForRental">
                <label class="form-check-label fw-bolder" asp-for="IsAvailableForRental"></label>
                <span asp-validation-for="IsAvailableForRental" class="text-danger "></span>

            </div>

            <div>
                <label asp-for="Description" class="form-label fw-bolder mt-4"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger "></span>

            </div>

            <br />
            <button type="submit" class="btn btn-lg btn-primary">Add</button>
        </fieldset>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

