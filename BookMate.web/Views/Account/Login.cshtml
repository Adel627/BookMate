@model LoginViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Log in</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form id="account" asp-action="SaveLogin" method="post">
                        <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">
                            Use an account to log in.
                        </h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="username" />
                            <label asp-for="UserName" class="form-label"></label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Password" class="form-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label asp-for="RememberMe" class="form-label"></label>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>
                         <div class="d-flex justify-content-between pt-2">
                            <p>
                                <a id="forgot-password" asp-action="ForgotPassword">Forgot your password?</a>
                            </p>
                           @*  <p>
                                <a asp-page="./Register" asp-route-returnUrl="">Register as a new user</a>
                            </p> *@
                            <p>
                                <a id="resend-confirmation" asp-action="ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div> 
                    </form> 
                    </section>
                </div>
            </div>
      
        </div>
    <div class="col-md-12 p-3 text-center">

        <p class="divider-text d-flex pt-3">or</p>
        <div>
            <p>
                <button class="btn btn-primary"><a class="nav-link" asp-controller="Account" asp-action="Register" asp-route-role="@AppRoles.Archive">Register As Archiver</a></button>
                <button class="btn btn-primary"> <a class="nav-link" asp-controller="Account" asp-action="Register" asp-route-role="@AppRoles.Reception">Register As Receptionest</a></button>
            </p>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
